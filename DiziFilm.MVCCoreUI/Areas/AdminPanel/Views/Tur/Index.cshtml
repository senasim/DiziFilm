@using DiziFilm.Model.ViewModel.Areas.AdminPanel
@section ContentHeader {
    <button class="btn btn-primary mt-3" type="button" data-bs-toggle="modal"
            data-bs-target="#modalTurEkle" aria-controls="season-modal" >
        <i class="fa-solid fa-plus me-2"></i>Tür Ekle
    </button>
}

@model TurIndexViewModel
@section Styles{
    <link rel="stylesheet" href="/adminassets/vendor/sweetalert2/dist/sweetalert2.min.css">
    
}

<main class="main-content">

    <div class="content-inner container-fluid pb-0" id="page_layout">
        <div class="row">
            <div class="col-sm-12">
                <div class="card pb-3">
                   
                    <div class="card-body">
                        <div class="table-view table-responsive pt-3 table-space">
                            <table id="tblTurler" class="data-tables table custom-table" >
                                <thead>
                                    <tr >
                                        <th></th>
                                        <th>Tür Adı</th>
                                        <th>Durum</th>
                                        <th></th>
                                        <th></th>
                                        
                                    </tr>
                                </thead>

                            </table>
                        </div>
                    </div>

                </div>

            </div>

            </div>
    </div>
    </main>


<form id="frmTurEkle">
    <div class="modal fade" id="modalTurEkle">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Tür Ekleme Paneli</h4>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="card-body">
                        <div class="form-group">
                            <label>Tür Adı</label>
                            <input type="text" class="form-control" asp-for="TurAdi" placeholder="Tür ">
                        </div>

                       
                    <!-- /.card-body -->

                </div>
                <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default" data-bs-dismiss="modal">VAZGEÇ</button>
                    <button type="button" id="btnTurEkle" class="btn btn-primary">KAYDET</button>
                </div>
            </div>
            <!-- /.modal-content -->
        </div>
        <!-- /.modal-dialog -->
    </div>
    </div>



</form>
<form id="frmTurGuncelle">
    <div class="modal fade" id="modalTurGuncelle">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="modal-title">Tür Güncelleme Paneli</h4>
                    <button type="button" class="close" data-bs-dismiss="modal" aria-label="Close">
                        <span aria-hidden="true">&times;</span>
                    </button>
                </div>
                <div class="modal-body">

                    <div class="card-body">
                        <div class="form-group">
                            <input type="hidden" class="form-control" id="GId">
                            <label>Tür Adı</label>
                            <input type="text" class="form-control" id="GTurAdi" placeholder="Tür ">
                        </div>


                        <!-- /.card-body -->

                    </div>
                    <div class="modal-footer justify-content-between">
                        <button type="button" class="btn btn-default" data-bs-dismiss="modal">VAZGEÇ</button>
                        <button type="button" id="btnTurGuncelle" class="btn btn-primary">YENİLE</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>
    </div>



</form>

 @section Scripts{

    <script src="/adminassets/vendor/sweetalert2/dist/sweetalert2.min.js"></script>
    <script src="/adminassets/js/plugins/sweet-alert.js"></script>
    <script src="~/adminassets/custom/Tur.js"></script>
  
 }