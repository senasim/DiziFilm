@using DiziFilm.Model.ViewModel.Areas.AdminPanel
@section ContentHeader {

}
@model FilmIndexViewModel

<main class="main-content">

    <div class="content-inner container-fluid pb-0">
        <div class="row">
            <div class="col-sm-12">
                <div class="card pb-3">
                    <div class="card-header border-bottom d-flex justify-content-between align-items-center py-3">
                        <div class="d-flex align-items-center mt-3 gap-2">

                            <button type="button" class="btn btn-primary" onclick="window.location.href='@Url.Action("Add", "Film")'">
                                <i class="fa-solid fa-plus me-2"></i>Film Ekle
                            </button>
                        </div>

                    </div>
                    <div class="card-body">
                        <div class="table-view table-responsive pt-3 table-space">
                            <table id="tblFilmler" class="data-tables table custom-table">
                                <thead>
                                    <tr class="text-uppercase">
                                        <th></th>
                                        <th>Film Adı</th>
                                        <th>Türü</th>
                                        <th>Açıklama</th>
                                        <th>Süre</th>
                                        <th>Çıkış Tarihi</th>
                                        <th>Dil</th>
                                        <th>Platform</th>
                                        <th>İşlemler</th>
                                        <th>Durum</th>
                                    </tr>
                                </thead>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

@section Scripts {

    <script src="~/adminassets/custom/Film.js"></script>

}